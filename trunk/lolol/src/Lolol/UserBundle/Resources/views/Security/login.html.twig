{% block fos_user_content %}
{% if error %}
    <div class="alert alert-warning">{{ error|trans }}</div>
{% endif %}
<div id="sign-in-error" class="alert alert-danger" style="display: none;"><small>{{ error|trans }}</small></div>
<div id="sign-in-success" class="alert alert-success" style="display: none;"><small>{{ 'user.signIn.success'|trans }}</small></div>
<div id="sign-in-loading-indicator" class="text-center" style="display: none"><i class="fa fa-spinner fa-spin fa-lg"></i></div>
<form action="{{ path("fos_user_security_check") }}" method="post" role="form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    
	<div class="form-group">
		<div class="input-group input-group-sm">
			<label for="username" class="input-group-addon"><i class="fa fa-user"></i></label>
			<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'user.username'|trans }}" />
		</div>
	</div>
	<div class="form-group">
		<div class="input-group input-group-sm">
			<label for="username" class="input-group-addon"><i class="fa fa-key"></i></label>
			<input type="password"  class="form-control" id="password" name="_password" required="required" placeholder="{{ 'user.password'|trans }}" />
		</div>
	</div>
	<div class="checkbox">
		<label><small><input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</small></label>
	</div>
	<button id="btn-sign-in" type="submit" class="btn btn-default btn-sign-in">Sign in</button>
</form>
{% endblock fos_user_content %}
