{% extends "::layout.html.twig" %}
{% block body %}
<div class="row">
	<div class="col-xs-2">
		<br />
		<h4>Menu</h4>
		<ul class="nav nav-pills nav-stacked">
			<li class="{{ app.request.attributes.get('_route') == 'lolol_shop_champions' ? 'active' }}"><a href="{{ path('lolol_shop_champions') }}">{{ 'Champions'|trans }}</a></li>
			<li class="{{ app.request.attributes.get('_route') == 'lolol_shop_items' ? 'active' }}"><a href="{{ path('lolol_shop_items') }}">{{ 'Items'|trans }}</a></li>
		</ul>
	</div>
	<div class="col-xs-10">
		<h3>{{ 'Shop'|trans }}</h3>
		<hr>
		<div class="content">
			{% block lololshop_body %} 
			{% endblock %}
		</div>
	</div>
</div>

{% endblock %}
