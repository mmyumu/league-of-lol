{% extends "LololTeamBundle::layout.html.twig" %}

{% block javascripts %} 
{{ parent() }}

<script type="text/javascript">
	$(document).ready(function() {
</script>
{% endblock %}

{% block lololteam_title %}My teams{% endblock %}
{% block lololapp_body %}

{% for result in results %}
<div class="row">
	<div class="col-xs-12 col-sm-10 col-md-8">
		<div class="row">
			<div class="col-xs-3">
				<strong>{{ 'team.names'|trans }}</strong>
			</div>
			<div class="col-xs-9">
				<strong>{{ 'team.selectedChampions'|trans }}</strong>
			</div>
		</div>
	</div>
</div>
<br />
<div class="row">
	<div class="col-xs-12 col-sm-10 col-md-8">
		<div class="row">
			<div class="col-xs-3">
				<div class="col-xs-12">
					{{ result.team.name }}
				</div>
				<div class="col-xs-12">
					<a href="{{ path('lolol_team_teamBuilder', {'id': result.team.id } ) }}"><i class="fa fa-pencil"></i></a>
					<a href="#" class="delete"><i class="fa fa-trash-o"></i></a>
				</div>
			</div>
			<div class="col-xs-9 gutter-1 compacted-gallery">
				{% for championTeam in result.champions %}
				<div class="col-xs-2">
					<div class="thumbnail text-center overflow-hidden">
						<img 
							src="{{ asset(folder ~ '/img/' ~ prefixIcons48 ~ championTeam.champion.imgName ~suffixIcons48) }}"
							alt="{{ championTeam.champion.name }}" /> <a
							href="{{ path('lolol_app_champion', { 'id': championTeam.champion.id }) }}"><small>{{
								championTeam.champion.name }}</small></a>
					</div>								
				</div>
				{% else %}
				BUG: empty team
				{% endfor %}
			</div>
		</div>
	</div>
</div>
{% else %}
<p>{{ 'team.myTeams.empty'|trans }}</p>
{% endfor %}
{% endblock %}
